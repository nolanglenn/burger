<h1>Burgers!</h1>

<h2>Eat-Da-Burger!</h2>

<div class="row">
    <div id="col1" class="col-6">
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
                {{id}} {{burger_name}}
                <button class="devour" data-id="{{this.id}}">DEVOUR!</button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div id="col2" class="col-6">
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>
                {{id}} {{burger_name}} has been devoured.
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

